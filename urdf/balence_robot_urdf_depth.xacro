<?xml version="1.0"?>

<robot name="balence_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find robot_description)/urdf/color_properties.xacro"/>
  <xacro:include filename="$(find robot_description)/urdf/balence_robot_gazebo_depth.xacro"/>
  <xacro:include filename="$(find realsense_ros_gazebo)/xacro/tracker.xacro"/>
  <xacro:include filename="$(find realsense_ros_gazebo)/xacro/depthcam.xacro"/>
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">	
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.31" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.35 0.45"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.31" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.35 0.45"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.31" rpy="0 0 0"/>
      <mass value="11.0"/>
      <inertia ixx="0.2979166" ixy="0.0" ixz="0.0"
               iyy="0.20625" iyz="0.0"
               izz="0.1329166" />
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.215 0.085" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.065" radius="0.085"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.065" radius="0.085"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="3" />
      <inertia ixx="0.0108375" ixy="0.0" ixz="0.0"
               iyy="0.006475" iyz="0.0"
               izz="0.006475" />
      </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.215 0.085" rpy="1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.065" radius="0.085"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.065" radius="0.085"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="3"/>
      <inertia ixx="0.0108375" ixy="0.0" ixz="0.0"
               iyy="0.006475" iyz="0.0"
               izz="0.006475" />
      </inertial>
  </link>
  
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.535" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>

  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.075 0.0 0.525" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">  </link>
  
   <xacro:realsense_d435 sensor_name="d435" parent_link="camera_link" rate="50">
    <origin rpy="0 0 0 " xyz="0 0 0.0"/>
  </xacro:realsense_d435>
</robot>
